@using AuthServer.Models.AccountViewModel
@model TwoFaceLoginViewModel

@{
    Layout = null; // Không sử dụng layout cho view này
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Two-Factor Authentication - ICoder</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .login-box {
            width: 400px;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .logo img {
            display: block;
            margin: 0 auto;
            width: 100px;
        }

        .title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .text-danger {
            font-size: 12px;
            color: #e74c3c;
            margin-top: 5px;
            margin-left: 5px;
            display: block;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-footer {
            text-align: center;
            margin-top: 10px;
        }

            .form-footer a {
                color: #007bff;
                text-decoration: none;
            }

        .alert {
            font-size: 14px;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            text-align: center;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
        }
    </style>
</head>

<body>

    <div class="login-container">
        <div class="login-box">
            <!-- Logo -->
            <div class="logo">
                <img src="~/path-to-logo.png" alt="ICoder" />
            </div>

            <!-- Title below the logo -->
            <div class="title">Two-Factor Authentication</div>

            <!-- Display error message if available -->
            @if (ViewBag.StatusCode != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.StatusCode
                </div>
            }

            <!-- Display success message if available -->
            @if (ViewBag.MessageInfo != null)
            {
                <div class="alert alert-success">
                    @ViewBag.MessageInfo
                </div>
            }

            <!-- Form starts here -->
            <form asp-action="TwoFaceLogin" method="post">

                <!-- Hidden Email field -->
                <input asp-for="Email" type="hidden" />

                <!-- Hidden TokenExpiry field -->
                <input asp-for="TokenExpiry" type="hidden" />

                <!-- Code field with 6 digits only -->
                <div class="form-group">
                    <input asp-for="Code" class="form-control" placeholder="Enter your 6-digit code" maxlength="6" minlength="6" pattern="\d{6}" required />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Verify Code</button>
                </div>

                <!-- Back to Sign In -->
                <div class="form-footer">
                    <a href="@Url.Action("Login", "Account")">Back to Sign In</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Include validation scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
