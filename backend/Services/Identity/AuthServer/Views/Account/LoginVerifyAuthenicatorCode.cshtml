@using AuthServer.Models.AccountViewModel
@model VerifyAuthenicatorViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enable Two-Factor Authentication</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa; /* Màu nền nhẹ nhàng */
        }

        .card {
            background-color: #ffffff;
            border-radius: 10px;
            border: none;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border: 2px solid #ced4da;
            border-radius: 5px;
            padding: 10px;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .text-muted {
            color: #6c757d !important;
        }

        .alert {
            margin-bottom: 20px;
        }

        .text-danger {
            font-size: 12px;
            color: #e74c3c;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <h2 class="text-center mt-4">Verify Two-Factor Authentication</h2>

                <!-- Thêm phần hiển thị thông báo lỗi nếu có -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <div class="card">
                    <form asp-action="LoginVerifyAuthenicatorCode" asp-controller="Account" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        
                        <div class="form-group">
                            <input asp-for="UserOrEmail" class="form-control" placeholder="UserName / Email" value="@Model?.UserOrEmail" type="hidden"/>
                            <span asp-validation-for="UserOrEmail" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="RememberMe"  />

                        <div class="form-group mb-3">
                            <label for="Code" class="form-label">Enter the verification code:</label>
                            <input asp-for="Code" class="form-control" placeholder="Enter code" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Enable</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</body>
</html>
