@using Microsoft.AspNetCore.Identity

@inject SignInManager<Users> signInManager
@inject UserManager<Users> userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthServer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthServer.styles.css" asp-append-version="true" />
    <style>
        /* Chỉnh sửa header để cố định và đảm bảo không bị chồng lấn */
        .navbar {
            z-index: 1000; /* Đảm bảo header luôn nằm trên các phần tử khác */
            position: fixed;
            top: 0;
            width: 100%;
        }

        /* Đảm bảo phần nội dung chính được đẩy xuống dưới header */
        main {
            margin-top: 70px; /* Điều chỉnh dựa trên chiều cao thực tế của header */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Profile" asp-action="Index"
                   style="display: inline-block; padding: 5px; border-radius: 8px; transition: transform 0.3s; text-decoration: none;">
                    <img src="https://sin1.contabostorage.com/9414348a03c9471cb842d448f65ca5fb:icoder/backend/imageidentity/ICoderlogomain.jpg" alt="ICoder Logo"
                         style="width: 80px; height: auto; border-radius: 5px;">
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-area=""
                                   asp-controller="Account"
                                   asp-action="Logout"
                                   style="padding: 6px 12px; background-color: #f8f9fa; color: #343a40; border: 1px solid #ccc; border-radius: 5px; font-size: 12px; font-weight: 600; text-decoration: none; transition: background-color 0.3s, color 0.3s;"
                                   onmouseover="this.style.backgroundColor='#409eff'; this.style.color='#ffffff';"
                                   onmouseout="this.style.backgroundColor='#f8f9fa'; this.style.color='#343a40';">
                                    Logout
                                </a>
                            </li>
                        </ul>

                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - AuthServer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/qrcode.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
