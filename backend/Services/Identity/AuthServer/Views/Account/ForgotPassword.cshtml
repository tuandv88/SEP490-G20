@using AuthServer.Models.AccountViewModel

@model ForgotPasswordViewModel

@{
    Layout = null; // Không sử dụng layout cho view này
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - ICoder</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .login-box {
            width: 400px;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .logo img {
            display: block;
            margin: 0 auto 20px;
            width: 250px;
            height: 110px;
        }

        .title {
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 22px;
            color: #3b7ed0;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .text-danger {
            font-size: 12px;
            color: #e74c3c;
            margin-top: 5px; /* Thêm khoảng cách phía trên */
            margin-left: 5px; /* Thêm khoảng cách với viền */
            display: block; /* Đảm bảo thông báo lỗi được hiển thị dưới dạng khối */
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #3b7ed0;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-footer {
            text-align: center;
            margin-top: 10px;
        }

        .form-footer a {
                color: #3b7ed0;
            text-decoration: none;
        }

        /* Styles for alert messages */
        .alert {
            font-size: 14px;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            text-align: center;
        }
        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }
        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
        }
    </style>
</head>

<body>

    <div class="login-container">
        <div class="login-box">
            <!-- Logo -->
            <div class="logo">
                <img src="https://sin1.contabostorage.com/9414348a03c9471cb842d448f65ca5fb:icoder/backend/imageidentity/ICoderlogomain.jpg" alt="ICoder" />
            </div>

            <!-- Title below the logo -->
            <div class="title">Forgot Password</div>

            <!-- Display error message if available -->
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }

            <!-- Display success message if available -->
            @if (ViewBag.EmailSent != null)
            {
                <div class="alert alert-success">
                    @ViewBag.EmailSent
                </div>
            }

            <!-- Form starts here -->
            <form asp-action="ForgotPassword" method="post">

                <!-- Hidden returnUrl -->
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <!-- Email field -->
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
                </div>

                <!-- Back to Sign In -->
                <div class="form-footer">
                    <a href="@Url.Action("Login", "Account")">Back to Sign In</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Include validation scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
